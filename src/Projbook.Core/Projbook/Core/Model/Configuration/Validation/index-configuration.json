{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [ "template" ],
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },
    "template": { "type": "string" },
    "output": { "type": "string" },
    "icon": { "type": "string" },
    "configurations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "anyOf": [
          { "required": [ "template-html" ] },
          { "required": [ "template-pdf" ] }
        ],
        "required": [ "title" ],
        "properties": {
          "title": { "type": "string" },
          "template-html": { "type": "string" },
          "template-pdf": { "type": "string" },
          "output-html": { "type": "string" },
          "output-pdf": { "type": "string" },
          "section-title-base": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true
          },
          "pages": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [ "title", "path" ],
              "properties": {
                "title": { "type": "string" },
                "path": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}